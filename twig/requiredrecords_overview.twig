{% extends '_base/_page-nav.twig' %}

{% block page_nav 'Required Records Overview' %}

{% block page_title __('Required Records Overview') %}

{% block page_main %}

{% if missingRecords is not empty %}
    <div class="contenttype-title">
        <h3>Missing Records
            <a class="btn btn-primary" href="{{ app.paths.bolt }}required-records/add">
                <i class="fa fa-plus"></i> Add Records
            </a>
        </h3>
    </div>

    <div class="row">
        {% for contenttype,items in missingRecords %}
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">{{ contenttype }}</div>

                    {% for item in items %}
                        <div class="list-group-item">
                            {% for key,value in item %}
                                <b>{{ key }}</b>: {{ value }} <br>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

<div class="contenttype-title">
    <h3>Required Records</h3>
</div>

<div class="row">
    {% for contenttype,items in requiredRecords %}
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">{{ contenttype }}</div>

                {% for item in items %}
                    <div class="list-group-item">
                        {% for key,value in item %}
                            <b>{{ key }}</b>: {{ value }} <br>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>



{% endblock page_main %}
